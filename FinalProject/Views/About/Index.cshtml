@model AboutVM

@{
    ViewData["Title"] = "About";
}


@section Css
{
    <link rel="shortcut icon" href="https://img.icons8.com/office/512/online-store.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="~/assets/css/about/about.css">


}

<!-- Start Main Area -->
<main>
    <a href="" class="angleUp">
        <i class="fa-solid fa-angles-up"></i>
    </a>
    <section id="about-title">
        <div class="container">
            <div class="col-lg-12 col-sm-12">
                <div class="title">
                    <h1>About</h1>
                </div>
            </div>
        </div>
    </section>


    <section id="about-area1">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="about-text">
                        <h1><b>@Model.AbourMission.Title</b></h1>
                        <p>
                            @Html.Raw(Model.AbourMission.Description)
                        </p>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="about-image">
                        <img src="~/assets/img/about/@Model.AbourMission.Image" alt="">
                    </div>
                </div>
            </div>
        </div>

    </section>

    <section id="about-area2">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="about-image">
                        <img src="~/assets/img/about/@Model.AboutVision.Image" alt="">
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 c0l-sm-12">
                    <div class="about-text">
                        <h1><b>@Model.AboutVision.Title</b></h1>
                        <p>
                            @Html.Raw(Model.AboutVision.Description)
                        </p>


                    </div>
                </div>


            </div>
        </div>

    </section>

    @await Component.InvokeAsync("InstagramPhoto")






</main>
<!-- end Main Area -->

@section Scripts
{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
            integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>


    <script src="https://kit.fontawesome.com/0622708fc2.js" crossorigin="anonymous"></script>


    <script src="~/assets/js/about/about.js"></script>


}


