@model ProductAdminDetailVM
@{
    ViewData["Title"] = "Detail";
    
}

@section Css{
    <link rel="stylesheet" href="~/admin/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/admin/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/admin/images/favicon.png" />
}

<div class="container-fluid ">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
               
                <h4 class="card-title">Product area</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered mb-2">
                        <thead style="background-color:black">
                            <tr style="color:red">
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Brand
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Size
                                <th>
                                    Price
                                </th>
                                <th>
                                    DiscountPrice
                                </th>

                            </tr>
                        </thead>
                        <tbody style="background-color: #EBEBEB ">

                            <tr>
                                <td>
                                    <img style="width:100px  !important; height:100px; border-radius:0px !important" src="~/assets/img/product/@Model.ProductImages.FirstOrDefault(m=> m.IsMain)?.Image" alt="image" />
                                </td>
                                <td>
                                    @Html.Raw(Model.Title)
                                </td>

                                <td>
                                    @Html.Raw(Model.CategoryName)
                                  
                                </td>
                                <td>
                                    @Html.Raw(Model.BrandName)
                                </td>
                                <td style="white-space: normal">
                                    @Html.Raw(Model.Description)
                                </td>
                                <td>
                                    @foreach (var size in Model.Sizes)
                                    {
                                        <span>@Html.Raw(size.SizeType)</span>
                                    }
                                </td>
                                <td>
                                    @Html.Raw(Model.Price.ToString("##.00")) ₼
                                </td>

                                <td>
                                    @Html.Raw((Model.Price - ((Model.Price * Model.DiscountPrice) / 100)).ToString("##.00"))₼
                                </td>



                            </tr>


                        </tbody>
                    </table>
                    <a  asp-controller="Product" asp-action="Index" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>
    </div>




    @section Scripts{
        <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page-->
        <!-- End plugin js for this page-->
        <!-- inject:js -->
        <script src="~/admin/js/off-canvas.js"></script>
        <script src="~/admin/js/hoverable-collapse.js"></script>
        <script src="~/admin/js/template.js"></script>
        <script src="~/admin/js/settings.js"></script>
        <script src="~/admin/js/todolist.js"></script>
    }



